<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.kodi.raspbee.ambilight" name="Kodi RaspBee" version="0.8.2" provider-name="Fatih Boy">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests"/>
  </requires>
  <extension point="xbmc.service" library="default.py"></extension>
  <extension point="xbmc.addon.metadata">
    <summary>Kodi-controlled RaspBee bridge</summary>
    <description>Let Kodi control your RaspBee bridge. Either turns the lights into a room-sized ambilight (with slow response time), or automatically dims and un-dims them when playback starts.</description>
    <platform>all</platform>
  </extension>
</addon>
